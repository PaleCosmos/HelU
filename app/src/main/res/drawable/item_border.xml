            </shape>
        </item>
        <item android:right="1dp" android:bottom="2dp">
            <shape
                    android:shape="rectangle">
                <solid android:color="@android:color/white"/>
                <corners android:radius="1dp"/>
            </shape>
        </item>

</selector>