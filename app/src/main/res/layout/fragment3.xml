<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:id="@+id/RL2"
                    android:background="@color/primary_dark"
    >
        <androidx.appcompat.widget.AppCompatTextView android:layout_width="match_parent"
                                                     android:layout_alignParentTop="true"
                                                     android:layout_height="wrap_content"
                                                     android:text="채팅"
                                                     android:layout_marginStart="20dp"
                                                     android:textColor="@color/white"
                                                     android:layout_marginTop="5dp"
                                                     android:textSize="30sp"
                                                     android:id="@+id/appCompatTextView2"/>

    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/primary_darker"
          android:layout_below="@id/RL2"
          android:id="@+id/view1"

    />

    <androidx.recyclerview.widget.RecyclerView
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view1"
            android:id="@+id/mRecyclerView2"
            tools:layout_editor_absoluteY="26dp" tools:layout_editor_absoluteX="2dp">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>