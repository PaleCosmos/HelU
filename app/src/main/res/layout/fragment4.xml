<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:id="@+id/RL3"
                    android:background="@color/primary_dark"
    >
        <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                     android:layout_alignParentTop="true"
                                                     android:layout_height="wrap_content"
                                                     android:text="과톡대학교"
                                                     android:layout_marginStart="20dp"
                                                     android:textColor="@color/white"
                                                     android:layout_marginTop="5dp"
                                                     android:textSize="30sp"
                                                     android:id="@+id/universText"/>
        <TextView android:layout_width="wrap_content" android:layout_alignParentBottom="true"
                  android:layout_height="wrap_content"
android:layout_marginStart="20dp"
                  android:layout_marginBottom="8dp"
                  android:textColor="@color/white"
                  android:layout_marginTop="5dp"
                  android:textSize="20sp"
                  android:id="@+id/departText"
                  android:layout_toEndOf="@+id/universText"
                  android:text="귀여운고양이학과"/>

    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/primary_darker"
          android:layout_below="@id/RL3"
          android:id="@+id/view3"

    />

    <com.github.bassaer.chatmessageview.view.ChatView
            android:layout_below="@+id/RL3"
            android:id="@+id/quatalk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:option_button_enable="true"
            app:text_selectable="true"
            app:message_font_size="18sp"
            app:time_label_font_size="13sp"
    />
</RelativeLayout>