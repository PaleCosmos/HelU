<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:theme="@style/AppTheme.Dark.Dialog"
        android:layout_gravity="center"

        android:background="@color/primary"
        android:layout_width="@dimen/width_normal"
        android:layout_height="wrap_content">


    <!-- 타이틀바 -->
    <RelativeLayout
            android:background="@color/primary"
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:id="@+id/xcv"

            android:layout_height="150dp">
        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="130dp"
android:layout_marginTop="10dp"
                                                      android:src="@drawable/profile"
                                                      app:civ_border_width="2dp"
                                                      android:id="@+id/akal"
                                                      app:civ_border_color="@color/white"
                                                      android:layout_centerInParent="true"
                                                      android:layout_height="130dp"/>


    </RelativeLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/vvw"
              android:text="이름"
              android:paddingTop="6dp"
              android:paddingBottom="10dp"
              android:textAlignment="center"
              android:layout_centerInParent="true"
              android:textColor="@color/white"
    android:layout_below="@id/xcv"/>
    <!-- //end 타이틀바 -->
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:layout_below="@+id/vvw">
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:background="@drawable/custom_button"
            android:textColor="@color/primary_dark"
            android:id="@+id/bbbs1"
            android:layout_toStartOf="@+id/centerView"
            android:text="채팅하기"/>
    <View android:layout_width="1dp" android:layout_height="match_parent"
          android:layout_centerInParent="true"
    android:id="@+id/centerView"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_toEndOf="@id/centerView"
            android:layout_alignParentEnd="true"
            android:background="@drawable/custom_button"
            android:textColor="@color/primary_dark"
            android:id="@+id/bbbs2"
            android:text="전화하기"/>
    </RelativeLayout>
    <!-- Notice -->

    <!-- Notice -->

</RelativeLayout>
